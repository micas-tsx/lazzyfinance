{
  "name": "lazzy-finance",
  "version": "1.0.0",
  "description": "Bot Telegram para gerenciamento de gastos financeiros com categorização automática via IA",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:web": "cd web && npm run dev",
    "build": "tsc",
    "build:web": "cd web && npm run build",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push"
  },
  "keywords": [
    "telegram",
    "bot",
    "finance",
    "typescript",
    "ollama"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.22.1",
    "tailwindcss": "^4.1.18",
    "telegraf": "^4.15.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.8",
    "prisma": "^5.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
